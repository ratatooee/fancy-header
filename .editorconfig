# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true

[package.{json,lock}]
indent_style = space
indent_size = 2

[*.{md,css,scss,yml,js}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
